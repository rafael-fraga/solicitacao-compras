{
  "name": "login",
  "component": "ZdLogin",
  "logoMessage": "Entre no simulador de compras",
  "logo": "/img/logo.svg",
  "layout": "left",
  "backgroundStyle": "#9889a2",
  "children": [
    {
      "name": "login-form",
      "component": "ZdForm",
      "children": [
        {
          "name": "email",
          "component": "ZdTextInput",
          "type": "email",
          "label": "Email",
          "validations": {
            "required": {},
            "email": {}
          },
          "grid": {
            "cols": 12
          }
        },
        {
          "name": "password",
          "component": "ZdPassword",
          "type": "password",
          "label": "Password",
          "validations": {
            "required": {}
          },
          "grid": {
            "cols": 12
          }
        },
        {
          "name": "login-button",
          "component": "ZdLoginButton",
          "label": "Sign In",
          "authUrl": "/",
          "redirectUrl": "/",
          "grid": {
            "cols": 12
          },
          "style": {
            "width": "100%"
          }
        }
      ]
    }
  ],
  "bottomLink": [
    {
      "name": "button-text",
      "component": "ZdText",
      "tag": "span",
      "text": [
        "Don't have an account? ",
        "<a href='' style='text-decoration: none'>Sign up</a>"
      ]
    }
  ]
}
